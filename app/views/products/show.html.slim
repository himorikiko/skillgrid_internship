.panel.panel-default
  .panel-heading
    h4 Product
  .panel-body
    table.table.table-striped.table-hover

      tr
        th Title:
        td = @product.title

      tr
        th Description:
        td = @product.description

      tr
        th Shop title:
        td = link_to @product.user.shop_title, @product.user

      tr
        th Pro?:
        td = @product.pro

      tr
        th Image:
        td = image_tag @product.image.url(:x800).to_s, alt: @product.title, class: 'img-responsive'

